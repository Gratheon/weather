{
  "name": "weather",
  "version": "1.0.0",
  "description": "Weather management",
  "main": "server.js",
  "dependencies": {
    "@apollo/federation": "0.37.1",
    "@databases/mysql": "7.0.0",
    "@gratheon/log-lib": "^2.2.4",
    "apollo-server-core": "3.4.0",
    "apollo-server-fastify": "3.4.0",
    "fast-safe-stringify": "2.1.1",
    "fastify": "3.22.1",
    "fastify-raw-body": "3.2.0",
    "got": "^11.8.6",
    "graphql": "15.8.0",
    "jwt-encode": "1.0.1",
